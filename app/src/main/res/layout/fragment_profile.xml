<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="600dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginTop="20dp"
                android:id="@+id/profile_img"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/outline_account_circle_white_48dp"
                android:padding="10dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"/>


            <TextView
                android:id="@+id/profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:fontFamily="@font/epilogueregular"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:layout_marginTop="10dp"/>


            <RatingBar
                android:layout_marginTop="10dp"
                android:id="@+id/rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/ratingBarStyle"
                android:numStars="5"
                android:stepSize="0.1"
                android:isIndicator="true" />

            <LinearLayout
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:padding="20dp"
                android:background="@drawable/layout_bg"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/profile_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:fontFamily="@font/epilogueregular"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/profile_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone"
                    android:fontFamily="@font/epilogueregular"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"/>

                <LinearLayout
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/profile_dob"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Age : "
                        android:fontFamily="@font/epilogueregular"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:layout_marginTop="10dp"/>
                    <TextView
                        android:layout_marginStart="40dp"
                        android:id="@+id/profile_gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="gender"
                        android:fontFamily="@font/epilogueregular"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:layout_marginTop="10dp"/>
                </LinearLayout>
            </LinearLayout>
            <!---->
            <Button
                android:id="@+id/profile_Services"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/epilogueregular"
                android:textSize="20sp"
                android:text="Services"
                android:background="@android:color/transparent"
                android:textAllCaps="false"
                android:drawablePadding="110dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:drawableEnd="@drawable/round_design_services_black_48"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/profile_fnf"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/epilogueregular"
                android:textSize="20sp"
                android:background="@android:color/transparent"
                android:text="Friends and Family"
                android:textAllCaps="false"
                android:drawablePadding="20dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:drawableEnd="@drawable/round_group_add_black_48"
                android:textColor="@color/black" />
<!---->
            <LinearLayout
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginStart="40dp"
                    android:id="@+id/profile_noofhelp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Number Of Helps"
                    android:fontFamily="@font/epilogueregular"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:layout_marginStart="110dp"
                    android:id="@+id/profile_noofhelpinnumbers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:fontFamily="@font/epilogueregular"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="30dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginStart="40dp"
                    android:id="@+id/profile_noofcallhelp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Number Of Asking for Help"
                    android:fontFamily="@font/epilogueregular"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:layout_marginStart="20dp"
                    android:id="@+id/profile_noofcallhelpinnumbers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:fontFamily="@font/epilogueregular"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"/>


            </LinearLayout>


            <Button
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/profile_accdel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/epilogueregular"
                android:textSize="20sp"
                android:text="Delete Profile"
                android:textAllCaps="false"
                android:background="@android:color/transparent"
                android:drawablePadding="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:drawableEnd="@drawable/round_delete_black_48"
                android:textColor="@color/black" />

            <Button
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/transparent"
                android:id="@+id/profile_acclogoutbtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/epilogueregular"
                android:textSize="20sp"
                android:text="Logout"
                android:textAllCaps="false"
                android:drawablePadding="110dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:drawableEnd="@drawable/baseline_exit_to_app_black_48"
                android:textColor="@color/black" />


        </LinearLayout>
        <Button
            android:visibility="gone"
            android:layout_marginTop="30dp"
            android:layout_alignParentEnd="true"
            android:id="@+id/profile_editprofile"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/round_edit_black_18"
            android:fontFamily="@font/epilogueregular"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp" />


    </RelativeLayout>

</ScrollView>